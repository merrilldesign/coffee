{% extends "_layouts/main" %}
{% set networks = {
  twitter: { name: "Twitter", url: "https://twitter.com/" },
  facebook: { name: "Facebook", url: "https://facebook.com/" },
  google: { name: "Google", url: "https://google.com/" }
}
%}
{% import '_macros.twig' as siteMacros %}

{% block main %}

{{ siteMacros.socialList(networks, "three") }}

<div class="full-bleed-header" style="background-size: 100%; height: 300px; background-image:url(/images/coffee-shop.jpg)">
    <div class="page-title text-center">
        <h2 class="logo"><span class="scripty">Crafty</span> Coffee</h2>
        <p class="tagline reverse">If we wrote it down, you can make it at home.</p>
        <p><a class="button radius" href="drinks/index.html">See Our Drinks</a> <a class="button radius" href="recipes/index.html">Make Our Drinks</a>

    </div>
</div>
<br>
<div class="row">
    <div class="large-6 small-12 columns">
       <h3>Favorite Drinks</h3>
        <div class="large-12 small-12 columns">
          {% for entry in craft.entries.section('drinks').limit(5).all() %}
            <a href="{{ entry.url }}">
            <div class="row hp-brew-item" style="background-image:url({{ entry.drinksImage.one().getUrl('drinksThumb') }});">
                <p class="reverse">{{entry.title}}</p>
            </div>
            </a>
            <br>
          {% endfor %}
        </div>
    </div>
    <div class="large-6 small-12 columns">
        <h3>Latest Coffee News</h3>
        <ul class="news-listing">
          {% for entry in craft.entries.section('news').limit(10).all() %}
            <li><a href="{{ entry.url }}">{{ entry.title }} &raquo;</a></li>
          {% endfor %}

        </ul>
    </div>

    <select name="age">
      {% for age in 1..100 %}
        <option name="age-{{ age }}">{{ age }}</option>
      {% endfor %}
    </select>

    <select name="age">
      {% for age in range(1,100) %}
        <option name="age-{{ age }}">{{ age }}</option>
      {% endfor %}
    </select>

</div>



{% endblock %}
